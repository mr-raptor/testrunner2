<html>
<head>
    <% include ../partials/head %>
	<style>
		.delete_button {
			display: none;
			color: grey;
			float: right;
		}
		li:hover .delete_button {
			display: block;
		}
	</style>
	<script>
		$(document).ready(function() {	});
	</script>
</head>
<body>
    <header>
        <% include ../partials/header %>
    </header>
	<div id="content">
		<h2>Select config:</h2>
		<ul>
			<% configs.forEach(configName => { %>
				<li>
					<a href="/testInfo/<%=configName%>"><%=configName%></a> 
					<a class="delete_button" href="configs/deleteConfig/<%=configName%>">Delete</a>
				</li>
			<% }); %>
			<li>
				<form method="POST" action="configs/config">
					<input id="configName" type="text" name="configName" />
					<input id="add_new" type="submit" value="New" />
				</form>
			</li>
		</ul>
	</div>
    <footer>	
        <% include ../partials/footer %>
    </footer>
</body>
</html>